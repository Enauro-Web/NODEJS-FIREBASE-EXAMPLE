<div class="col-md-6 offset-md-3">

    <div class="card bg-dark text-light">
        <div class="card-header">
            <h1 class="h4 text-white">Contacts List</h1>
        </div> 

        <div class="card-body">
            {{#if contacts}}
                <ul class="list-group">
                    {{#each contacts}}
                        <li class="list-group-item flex justify-content-between align-items-center">
                            <h3>{{firstname}} {{lastname}}</h3>
                            <p>{{email}}</p>
                            <p>{{phone}}</p>
                            <a class="btn btn-danger" href="/delete-contact/{{id}}">Delete</a>
                            <a class="btn btn-secondary" href="/edit-contact/{{id}}">Edit</a>
                        </li>
                    {{/each}}
                </ul>
            {{else}}
                <p>No contacts yet</p>
            {{/if}}
        </div>

        <div class="card-footer">        
            <form action="{{#unless contact.id}}/new-contact{{else}}/update-contact/{{contact.id}}{{/unless}}" method="POST">

                <div class="row">
                    <div class="col">
                        <label for="firstname">First Name:</label>
                        <input class="form-control mb-2" type="text" name="firstname" placeholder="First Name" id="firstname" value="{{contact.firstname}}">
                    </div>            
                    <div class="col">                
                        <label for="lastname">Last Name:</label>
                        <input class="form-control mb-2" type="text" name="lastname" placeholder="Last Name" id="lastname" value="{{contact.lastname}}">
                    </div>
                </div>

                <div class="row">
                    <div class="col">
                        <label for="email">Email:</label>
                        <input class="form-control mb-2" type="email" name="email" placeholder="e-mail" id="email" value="{{contact.email}}">
                    </div>

                    <div class="col">
                        <label for="phone">Phone Number:</label>
                        <input class="form-control mb-2" type="text" name="phone" placeholder="Phone" id="phone" value="{{contact.phone}}">   
                        </div>
                    </div>

                <div class="row">
                    <div class="col">
                        {{#if contact.id}}
                            <button class="btn btn-danger btn-block" type="submit">Update</button>
                            <a href="/" class="btn btn-secondary">Cancel</a>
                        {{else}}
                            <button class="btn btn-primary btn-block" type="submit">Submit</button>
                        {{/if}}
                    </div>
                    
                </div>

            </form>
        </div>

    </div>   

</div>